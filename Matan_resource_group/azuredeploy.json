{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SourceStorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "DestStorageType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    }},
  "variables": {
    "SourceStorageName": "[concat('SourceStorage', uniqueString(resourceGroup().id))]",
    "DestStorageName": "[concat('DestStorage', uniqueString(resourceGroup().id))]"},
  "resources": [
    {
      "name": "[variables('SourceStorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('SourceStorageType')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "SourceStorage"
      },
      "kind": "Storage"
    },
    {
      "name": "[variables('DestStorageName')]",
      "type": "Microsoft.Storage/storageAccounts",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-01-01",
      "sku": {
        "name": "[parameters('DestStorageType')]"
      },
      "dependsOn": [ ],
      "tags": {
        "displayName": "DestStorage"
      },
      "kind": "Storage"
    }],
  "outputs": {}
}
